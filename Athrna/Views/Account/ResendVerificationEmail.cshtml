@{
    ViewData["Title"] = "Resend Verification Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Resend Verification Email</h4>
                </div>
                <div class="card-body">
                    <p>Enter your email address to receive a new verification link.</p>

                    <form asp-action="ResendVerificationEmail" method="post">
                        @Html.AntiForgeryToken()

                        <div class="text-danger">
                            @Html.ValidationSummary(true)
                        </div>

                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" name="email" value="@ViewBag.Email" class="form-control" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Resend Verification Email</button>
                        </div>
                    </form>

                    <hr />

                    <div class="text-center">
                        <p>
                            <a asp-action="Login">Back to Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>