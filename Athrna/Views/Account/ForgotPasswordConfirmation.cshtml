@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Check Your Email</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-envelope-check text-success" style="font-size: 3rem;"></i>
                    </div>

                    <h5 class="text-center mb-3">Password Reset Instructions Sent</h5>

                    <p>
                        If you have an account with us, we've sent password reset instructions to the email address you provided.
                    </p>

                    <p>
                        Please check your email (including your spam folder) and click on the link provided to reset your password.
                        The link will expire after 24 hours for security reasons.
                    </p>

                    <div class="alert alert-info">
                        <p class="mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            If you don't receive an email within a few minutes, please ensure you've entered the correct email address
                            and check your spam folder.
                        </p>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="Login" class="btn btn-primary">Return to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>