@model string
@{
    string defaultCity = Model ?? "madinah";
}

<!-- Interactive Google Map Component -->
<section class="interactive-map-section">
    <div class="container">
        <h2>Interactive Map</h2>

        <div class="google-map-container">
            <!-- Map Canvas -->
            <div id="googleMap" data-default-city="@defaultCity"></div>

            <!-- City Selector -->
            <div class="city-selector">
                <h3>Select City</h3>
                <div class="city-button-group">
                    <button type="button" class="city-button @(defaultCity == "madinah" ? "active" : "")" data-city="madinah">Madinah</button>
                    <button type="button" class="city-button @(defaultCity == "riyadh" ? "active" : "")" data-city="riyadh">Riyadh</button>
                    <button type="button" class="city-button @(defaultCity == "alula" ? "active" : "")" data-city="alula">AlUla</button>
                </div>
            </div>

            <!-- Map Legend -->
            <div class="map-legend">
                <h3>Legend</h3>
                <div class="legend-item">
                    <div class="legend-marker city"></div>
                    <div class="legend-text">City</div>
                </div>
                <div class="legend-item">
                    <div class="legend-marker site"></div>
                    <div class="legend-text">Historical Site</div>
                </div>
            </div>
        </div>
    </div>
</section>