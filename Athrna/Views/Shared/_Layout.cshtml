<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Athrna</title>
    <link rel="icon" href="~/images/logo.jpg" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/css/map.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <div class="logo">
            <img src="~/images/logo.jpg" alt="Athrna Logo" id="logo-image" />
            <div class="logo-text">Athrna</div>
        </div>
        <button class="login-btn" id="loginButton">Login</button>
    </header>

    @RenderBody()

    <footer>
        <p>&copy; @DateTime.Now.Year Athrna - Saudi Historical Sites. All rights reserved.</p>
    </footer>

    <!-- Login Modal -->
    <div class="login-modal" id="loginModal">
        <div class="modal-content">
            <h2>Login to Your Account</h2>
            <form id="loginForm">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" required />
                </div>
                <div class="form-group">
                    <label for="password">EncryptedPassword</label>
                    <input type="password" id="EncryptedPassword" required />
                </div>
                <div class="modal-buttons">
                    <button type="button" class="close-btn" id="closeModal">
                        Cancel
                    </button>
                    <button type="submit" class="submit-btn">Login</button>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/login.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>