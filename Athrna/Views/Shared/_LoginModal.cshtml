@* _LoginModal.cshtml *@
<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Login to Athrna</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Display validation errors -->
                <div class="alert alert-danger d-none" id="loginErrorMessage" role="alert">
                    Invalid username or password. Please try again.
                </div>

                <form id="loginModalForm">
                    <div class="form-group mb-3">
                        <label for="modalUsername" class="form-label">Username</label>
                        <input type="text" class="form-control" id="modalUsername" name="Username" required aria-required="true">
                        <div class="invalid-feedback">Username is required</div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="modalPassword" class="form-label">Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="modalPassword" name="Password" required aria-required="true">
                            <button class="btn btn-outline-secondary password-toggle" type="button">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <div class="invalid-feedback">Password is required</div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="modalRememberMe" name="RememberMe">
                            <label class="form-check-label" for="modalRememberMe">Remember me</label>
                        </div>
                    </div>

                    <!-- CAPTCHA Section -->
                    <div class="form-group mb-3 captcha-container">
                        <label for="captchaInput" class="form-label">Please enter the characters from the image below</label>
                        <div class="captcha-box mb-2">
                            <div id="captchaImage" class="captcha-image"></div>
                            <button type="button" class="btn btn-sm btn-outline-secondary refresh-captcha" id="refreshCaptcha">
                                <i class="bi bi-arrow-repeat"></i>
                            </button>
                        </div>
                        <input type="text" class="form-control" id="captchaInput" name="CaptchaInput" required aria-required="true">
                        <div class="invalid-feedback">CAPTCHA is required</div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>

                <hr />

                <div class="text-center">
                    <p class="mb-0">
                        <a asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a>
                    </p>
                    <p>
                        Don't have an account?
                        <a asp-controller="Account" asp-action="Register">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>