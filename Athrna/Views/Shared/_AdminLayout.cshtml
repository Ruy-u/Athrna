@using Athrna.Models
@{
    int adminRoleLevel = ViewBag.AdminRoleLevel ?? 5;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Athrna Admin</title>
    <link rel="icon" href="~/images/logo.jpg" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <img src="~/images/logo.jpg" alt="Athrna Logo" class="sidebar-logo">
                <h3>Athrna Admin</h3>
            </div>

            <ul class="list-unstyled components">
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>

                <!-- Content Management (Level 3 or higher) -->
                @if (adminRoleLevel <= 3)
                {
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Sites" ? "active" : "")">
                        <a asp-controller="Admin" asp-action="Sites">
                            <i class="bi bi-geo-alt me-2"></i> Sites
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Cities" ? "active" : "")">
                        <a asp-controller="Admin" asp-action="Cities">
                            <i class="bi bi-building me-2"></i> Cities
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString().StartsWith("Guide") ? "active" : "")">
                        <a href="#guideSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="bi bi-people me-2"></i> Guides
                        </a>
                        <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Action"].ToString().StartsWith("Guide") ? "show" : "")" id="guideSubmenu">
                            <li>
                                <a asp-controller="Admin" asp-action="GuideApplications">
                                    <i class="bi bi-clipboard-check me-2"></i> Applications
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Admin" asp-action="ManageGuides">
                                    <i class="bi bi-person-badge me-2"></i> Manage Guides
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                <!-- User Management (Level 4 or higher) -->
                @if (adminRoleLevel <= 4)
                {
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "active" : "")">
                        <a asp-controller="Admin" asp-action="Users">
                            <i class="bi bi-people me-2"></i> Users
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Ratings" ? "active" : "")">
                        <a asp-controller="Admin" asp-action="Ratings">
                            <i class="bi bi-star me-2"></i> Ratings
                        </a>
                    </li>
                }

                <!-- Admin Management (Only Level 1) -->
                @if (adminRoleLevel == 1)
                {
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "ManageAdmins" ? "active" : "")">
                        <a asp-controller="Admin" asp-action="ManageAdmins">
                            <i class="bi bi-shield-lock me-2"></i> Manage Admins
                        </a>
                    </li>
                }

                <li>
                    <a asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-2"></i> View Site
                    </a>
                </li>
                <li>
                    <a asp-controller="Account" asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </a>
                </li>
            </ul>

            <!-- Admin Role Info -->
            <div class="admin-role-info">
                <div class="admin-role-level">
                    @{
                        string roleName = adminRoleLevel switch
                        {
                            1 => "Super Admin",
                            2 => "Senior Admin",
                            3 => "Content Manager",
                            4 => "User Manager",
                            5 => "Viewer",
                            _ => "Unknown"
                        };

                        string badgeColor = adminRoleLevel switch
                        {
                            1 => "danger",
                            2 => "warning",
                            3 => "success",
                            4 => "info",
                            5 => "secondary",
                            _ => "secondary"
                        };
                    }
                    <span class="badge bg-@badgeColor">Level @adminRoleLevel: @roleName</span>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-outline-primary">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="admin-user-info">
                        <span>Welcome, @User.Identity.Name</span>
                    </div>
                </div>
            </nav>

            <!-- Display alerts for unauthorized actions -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mx-3 mt-3" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mx-3 mt-3" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarCollapse = document.getElementById('sidebarCollapse');
            const sidebar = document.getElementById('sidebar');

            if (sidebarCollapse && sidebar) {
                sidebarCollapse.addEventListener('click', function () {
                    sidebar.classList.toggle('active');
                });
            }
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Check if admin role information exists in localStorage
            const isAdmin = localStorage.getItem('isAdmin') === 'true';
            const adminRoleLevel = parseInt(localStorage.getItem('adminRoleLevel') || '5');
            const adminRoleName = localStorage.getItem('adminRoleName') || 'Unknown';

            console.log('Admin status from localStorage:', {
                isAdmin,
                adminRoleLevel,
                adminRoleName
            });

            // If we don't have admin role information but we're in the admin panel,
            // we need to fetch it from the server
            if (!isAdmin && window.location.pathname.startsWith('/Admin')) {
                console.log('In Admin panel but no admin info in localStorage, fetching...');

                fetch('/Admin/GetCurrentUserInfo', {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.isAdmin) {
                            console.log('Received admin info from server:', data);

                            localStorage.setItem('isAdmin', 'true');
                            localStorage.setItem('adminRoleLevel', data.adminRoleLevel.toString());

                            // Map role level to a descriptive name
                            const roleName = getRoleName(data.adminRoleLevel);
                            localStorage.setItem('adminRoleName', roleName);

                            // Refresh the page to apply admin permissions
                            window.location.reload();
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching admin info:', error);
                    });
            }

            // Helper function to convert role level to a descriptive name
            function getRoleName(roleLevel) {
                switch (parseInt(roleLevel)) {
                    case 1: return 'Super Admin';
                    case 2: return 'Senior Admin';
                    case 3: return 'Content Manager';
                    case 4: return 'User Manager';
                    case 5: return 'Viewer';
                    default: return 'Administrator';
                }
            }

            // Toggle admin sidebar items based on role level
            function updateSidebarVisibility() {
                const adminRoleLevel = parseInt(localStorage.getItem('adminRoleLevel') || '5');

                // Only show content management items to level 3 or higher
                const contentManagementItems = document.querySelectorAll('[data-role-level="3"]');
                contentManagementItems.forEach(item => {
                    item.style.display = adminRoleLevel <= 3 ? 'block' : 'none';
                });

                // Only show user management items to level 4 or higher
                const userManagementItems = document.querySelectorAll('[data-role-level="4"]');
                userManagementItems.forEach(item => {
                    item.style.display = adminRoleLevel <= 4 ? 'block' : 'none';
                });

                // Only show admin management items to level 1
                const adminManagementItems = document.querySelectorAll('[data-role-level="1"]');
                adminManagementItems.forEach(item => {
                    item.style.display = adminRoleLevel === 1 ? 'block' : 'none';
                });
            }

            // Call this function to update sidebar visibility
            updateSidebarVisibility();
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>