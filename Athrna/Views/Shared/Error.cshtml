@model ErrorViewModel
@{
    ViewData["Title"] = $"Error {Model.StatusCode}";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="h4 mb-0">Error @Model.StatusCode</h1>
                </div>
                <div class="card-body">
                    <div class="error-icon text-center mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
                    </div>

                    <h2 class="text-center mb-4">@Model.ErrorMessage</h2>

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-info">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </div>
                    }

                    @if (Model.ShowDetails && !string.IsNullOrEmpty(Model.ExceptionType))
                    {
                        <div class="alert alert-secondary">
                            <h5>Technical Details</h5>
                            <dl>
                                <dt>Exception Type</dt>
                                <dd>@Model.ExceptionType</dd>

                                @if (!string.IsNullOrEmpty(Model.ExceptionPath))
                                {
                                    <dt>Path</dt>
                                    <dd>@Model.ExceptionPath</dd>
                                }
                            </dl>
                        </div>
                    }

                    <div class="text-center mt-4">
                        <a href="/" class="btn btn-primary">Return to Home Page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>