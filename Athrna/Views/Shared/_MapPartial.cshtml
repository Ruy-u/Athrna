<section class="map-section">
    <h2>@Html.T("Explore Historical Sites")</h2>
    <div class="map-container">
        <div class="map-controls">
            <button class="map-btn active" data-city="madinah">@Html.T("Madinah")</button>
            <button class="map-btn" data-city="riyadh">@Html.T("Riyadh")</button>
            <button class="map-btn" data-city="alula">@Html.T("AlUla")</button>
        </div>
        <div class="map-display">
            <div id="map" class="map"></div>
            <div class="site-info" id="siteInfo">
                <img id="siteImage" src="/api/placeholder/300/150" alt="@Html.T("Historical Site")" />
                <h3 id="siteName">@Html.T("Site Name")</h3>
                <p id="siteDescription">@Html.T("Site description goes here.")</p>
                <p id="siteYear">
                    <strong>@Html.T("Established"):</strong> <span id="yearValue">@Html.T("Year")</span>
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/map.js"></script>
}