@model Athrna.Models.City

@{
    ViewData["Title"] = "Delete City";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <div class="d-flex align-items-center">
                        <h6 class="mb-0">Confirm Delete</h6>
                        <a asp-action="Cities" class="btn btn-outline-secondary btn-sm ms-auto">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5>Are you sure you want to delete this city?</h5>
                        <p class="mb-0">This action cannot be undone. Deleting a city will impact any related data, including sites and guides.</p>
                    </div>

                    <div class="city-details mb-4">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h5 class="card-title">@Model.Name</h5>
                                        <p class="card-text">
                                            <strong>ID:</strong> @Model.Id
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="DeleteCity" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="form-group d-flex justify-content-between">
                            <a asp-action="Cities" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete City</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>